<h1> Post Your ad Here </h1>

<%= form_for :post, url: posts_path do |f| %>

  <% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited
      from being saved:</h2>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <table>
    <tr><td>Category</td><td><%= f.text_field :category %></td></tr>
    <tr><td>Job Type</td><td><%= f.text_field :job_type %></td></tr>
    <tr><td>Title</td><td><%= f.text_field :title %></td></tr>
    <tr><td>Description</td><td><%= f.text_area :description %></td></tr>
    <tr><td>Location</td><td><%= f.text_field :location %></td></tr>
    <tr><td>Salary Offered</td><td><%= f.text_field :salary_offered %></td></tr>
    <tr><td>Requiered Experience</td><td><%= f.text_field :required_experience %></td></tr>
    <tr><td>Required Profile</td><td><%= f.text_field :required_profile %></td></tr>
  </table>
  <br/>
  <div><%= f.submit "Create"%></div>
<% end %>
