<%- model_class = Resume -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:resume_heading) %>:</strong></dt>
  <dd><%= @resume.resume_heading %></dd>
  <dt><strong><%= model_class.human_attribute_name(:functional_area) %>:</strong></dt>
  <dd><%= @resume.functional_area %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_company) %>:</strong></dt>
  <dd><%= @resume.current_company %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @resume.position %></dd>
  <dt><strong><%= model_class.human_attribute_name(:key_skills) %>:</strong></dt>
  <dd><%= @resume.key_skills %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_experience) %>:</strong></dt>
  <dd><%= @resume.total_experience %></dd>
  <dt><strong><%= model_class.human_attribute_name(:attach_resume) %>:</strong></dt>
  <dd><%= image_tag(@resume.attach_resume_url, :size => "100x120") if @resume.attach_resume_url.present? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:expected_salary) %>:</strong></dt>
  <dd><%= @resume.expected_salary %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
  <dd><%= @resume.active %></dd>
  <dt><strong><%= model_class.human_attribute_name(:highest_qualification) %>:</strong></dt>
  <dd><%= @resume.highest_qualification %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @resume.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              resumes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_resume_path(@resume), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              resume_path(@resume),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
