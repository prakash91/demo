      <%= f.file_field :attach_resume%>
    </div>
    <%= error_span(@resume[:attach_resume]) %>
  </div>
  <div class="control-group">
    <%= f.label :expected_salary, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :expected_salary, :class => 'form-control' %>
    </div>
    <%= error_span(@resume[:expected_salary]) %>
  </div>
  <div class="control-group">
    <%= f.label :active, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :active, :class => 'form-control' %>
    </div>
    <%= error_span(@resume[:active]) %>
  </div>
  <div class="control-group">
    <%= f.label :highest_qualification, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :highest_qualification, :class => 'form-control' %>
    </div>
    <%= error_span(@resume[:highest_qualification]) %>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%= error_span(@resume[:user_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            resumes_path, :class => 'btn btn-default' %>

<% end %>
